{
  "name": "@repo/tokens",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tokens.css": "./dist/css/tokens.css",
    "./theme": "./dist/theme.mjs"
  },
  "scripts": {
    "build": "npm run build:tokens && tsup",
    "build:tokens": "style-dictionary build --config sd.config.mjs",
    "dev": "npm run build:tokens && tsup --watch",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "eslint": "^9.16.0",
    "style-dictionary": "^4.1.1",
    "typescript-eslint": "^8.18.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
